@model PaginatedList<ContactMessage>
@using Microsoft.EntityFrameworkCore
@inject MamNonApp.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Quản lý Tin nhắn";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">Danh sách tin nhắn liên hệ</h5>
</div>

<!-- Filter Form -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Tìm theo tên, SĐT, email..." value="@ViewBag.Search">
                </div>
            </div>
            <div class="col-md-2">
                <select name="status" class="form-select">
                    <option value="">-- Trạng thái --</option>
                    <option value="unread" selected="@(ViewBag.Status == "unread")">Chưa xử lý</option>
                    <option value="read" selected="@(ViewBag.Status == "read")">Đã xử lý</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="date" name="fromDate" class="form-control" placeholder="Từ ngày" value="@ViewBag.FromDate">
            </div>
            <div class="col-md-2">
                <input type="date" name="toDate" class="form-control" placeholder="Đến ngày" value="@ViewBag.ToDate">
            </div>
            <div class="col-md-2">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-admin-outline flex-fill">
                        <i class="fas fa-filter me-1"></i>Lọc
                    </button>
                    @if (!string.IsNullOrEmpty(ViewBag.Search) || !string.IsNullOrEmpty(ViewBag.Status) || !string.IsNullOrEmpty(ViewBag.FromDate) || !string.IsNullOrEmpty(ViewBag.ToDate))
                    {
                        <a href="/admin/messages" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Stats -->
@{
    // Lấy tổng số từ database
    var totalUnread = await _context.ContactMessages.CountAsync(m => !m.IsRead);
    var totalRead = await _context.ContactMessages.CountAsync(m => m.IsRead);
}
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card bg-warning bg-opacity-10 border-0">
            <div class="card-body d-flex align-items-center">
                <div class="bg-warning rounded-circle p-3 me-3">
                    <i class="fas fa-envelope text-white"></i>
                </div>
                <div>
                    <h6 class="mb-0 text-warning">Chưa xử lý</h6>
                    <h4 class="mb-0">@totalUnread</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-success bg-opacity-10 border-0">
            <div class="card-body d-flex align-items-center">
                <div class="bg-success rounded-circle p-3 me-3">
                    <i class="fas fa-check text-white"></i>
                </div>
                <div>
                    <h6 class="mb-0 text-success">Đã xử lý</h6>
                    <h4 class="mb-0">@totalRead</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Results Count -->
@if (!string.IsNullOrEmpty(ViewBag.Search) || !string.IsNullOrEmpty(ViewBag.Status) || !string.IsNullOrEmpty(ViewBag.FromDate) || !string.IsNullOrEmpty(ViewBag.ToDate))
{
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <span>
            <i class="fas fa-info-circle me-2"></i>
            Tìm thấy <strong>@Model.Count</strong> kết quả
        </span>
        <a href="/admin/messages" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-times me-1"></i>Xóa bộ lọc
        </a>
    </div>
}

<div class="admin-table">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Họ tên</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Tên bé</th>
                    <th>Nội dung</th>
                    <th>Ngày gửi</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsRead ? "" : "table-warning")">
                        <td>@item.Id</td>
                        <td>@item.ParentName</td>
                        <td>@item.Phone</td>
                        <td>@(item.Email ?? "-")</td>
                        <td>@(item.ChildName ?? "-")</td>
                        <td>@(item.Message.Length > 50 ? item.Message.Substring(0, 50) + "..." : item.Message)</td>
                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <form asp-action="UpdateMessageStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="status" value="@(item.IsRead ? "unread" : "read")" />
                                <button type="submit" class="btn btn-sm @(item.IsRead ? "btn-success" : "btn-warning")">
                                    @(item.IsRead ? "Đã xử lý" : "Chưa xử lý")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<div class="mt-4">
    @await Html.PartialAsync("_Pagination", Model)
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
        <p class="text-muted">Chưa có tin nhắn nào</p>
    </div>
}
