@model Activity

@{
    ViewData["Title"] = "Thêm Hoạt động";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">Thêm hoạt động mới</h5>
    <a href="/admin/activities" class="btn btn-admin-outline">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <form asp-action="CreateActivity" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Tiêu đề <span class="text-danger">*</span></label>
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề hoạt động" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Category" class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                    <select asp-for="Category" class="form-select">
                        <option value="Sự kiện">Sự kiện</option>
                        <option value="Vui chơi">Vui chơi</option>
                        <option value="Học tập">Học tập</option>
                        <option value="Ngoại khóa">Ngoại khóa</option>
                        <option value="Thể thao">Thể thao</option>
                        <option value="Nghệ thuật">Nghệ thuật</option>
                    </select>
                </div>
                
                <div class="col-md-4 mb-3">
                    <label asp-for="EventDate" class="form-label fw-bold">Ngày tổ chức</label>
                    <input asp-for="EventDate" type="date" class="form-control" />
                </div>
                
                <div class="col-md-4 mb-3">
                    <label asp-for="Location" class="form-label fw-bold">Địa điểm</label>
                    <input asp-for="Location" class="form-control" placeholder="VD: Sân trường" />
                </div>
            </div>
            
            @await Html.PartialAsync("_ImageUpload", "", new ViewDataDictionary(ViewData) { { "InputId", "ImageUrl" }, { "InputName", "ImageUrl" }, { "Label", "Ảnh chính" } })
            
            @await Html.PartialAsync("_ImageUpload", "", new ViewDataDictionary(ViewData) { { "InputId", "ThumbnailUrl" }, { "InputName", "ThumbnailUrl" }, { "Label", "Ảnh thumbnail (nếu có)" } })
            
            <div class="mb-3">
                <label asp-for="Summary" class="form-label fw-bold">Tóm tắt <span class="text-danger">*</span></label>
                <textarea asp-for="Summary" class="form-control" rows="2" placeholder="Tóm tắt ngắn về hoạt động..."></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="Content" class="form-label fw-bold">Nội dung chi tiết</label>
                <textarea asp-for="Content" id="Content" class="form-control" rows="10" placeholder="Nhập nội dung chi tiết..."></textarea>
                <div class="form-text">Có thể nhập ảnh trực tiếp vào nội dung bằng cách copy-paste hoặc dùng nút Insert Image</div>
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-admin px-4">
                    <i class="fas fa-save me-2"></i>Lưu
                </button>
                <a href="/admin/activities" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @await Html.PartialAsync("_RichTextEditor", "", new ViewDataDictionary(ViewData) { { "TextareaId", "Content" }, { "Height", 400 } })
}
