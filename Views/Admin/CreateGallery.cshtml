@model GalleryItem

@{
    ViewData["Title"] = "Thêm ảnh vào Thư viện";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">Thêm ảnh mới</h5>
    <a href="/admin/gallery" class="btn btn-admin-outline">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <form asp-action="CreateGallery" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Tiêu đề <span class="text-danger">*</span></label>
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề cho ảnh" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Category" class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                    <select asp-for="Category" class="form-select">
                        <option value="Hoạt động">Hoạt động</option>
                        <option value="Lớp học">Lớp học</option>
                        <option value="Sự kiện">Sự kiện</option>
                        <option value="Cơ sở vật chất">Cơ sở vật chất</option>
                        <option value="Vui chơi">Vui chơi</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="DisplayOrder" class="form-label fw-bold">Thứ tự hiển thị</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control" value="0" />
                    <div class="form-text">Số nhỏ hơn sẽ hiển thị trước</div>
                </div>
            </div>
            
            @await Html.PartialAsync("_ImageUpload", "", new ViewDataDictionary(ViewData) { { "InputId", "ImageUrl" }, { "InputName", "ImageUrl" }, { "Label", "Ảnh" } })
            
            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn về bức ảnh..."></textarea>
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-admin px-4">
                    <i class="fas fa-save me-2"></i>Lưu
                </button>
                <a href="/admin/gallery" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
