@model ContactViewModel

@{
    ViewData["Title"] = Model.Seo.Title;
    ViewData["Seo"] = Model.Seo;
}

@* Page Header *@
<section class="page-header py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center mb-3">
                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Liên hệ</li>
                    </ol>
                </nav>
                <h1 class="display-5 fw-bold">Liên Hệ Với Chúng Tôi</h1>
                <p class="lead text-muted">Hãy liên hệ để được tư vấn và tham quan trường</p>
            </div>
        </div>
    </div>
</section>

@* Contact Section *@
<section class="contact-section py-5">
    <div class="container">
        <div class="row">
            @* Contact Info *@
            <div class="col-lg-4 mb-4 mb-lg-0">
                <div class="contact-info">
                    <h4 class="fw-bold mb-4">Thông Tin Liên Hệ</h4>
                    
                    <div class="contact-item d-flex mb-4">
                        <div class="icon-box bg-success text-white rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">Địa chỉ</h6>
                            <p class="text-muted mb-0">@(Model.SchoolInfo?.Address ?? "170 Mạc Quyết, Anh Dũng, Dương Kinh, Hải Phòng")</p>
                        </div>
                    </div>

                    <div class="contact-item d-flex mb-4">
                        <div class="icon-box bg-success text-white rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">Điện thoại</h6>
                            <p class="text-muted mb-0">@(Model.SchoolInfo?.Phone ?? "0964106259")</p>
                        </div>
                    </div>

                    <div class="contact-item d-flex mb-4">
                        <div class="icon-box bg-success text-white rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">Email</h6>
                            <p class="text-muted mb-0">@(Model.SchoolInfo?.Email ?? "info@mamnonhoahuongduong.edu.vn")</p>
                        </div>
                    </div>

                    <div class="contact-item d-flex mb-4">
                        <div class="icon-box bg-success text-white rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">Giờ làm việc</h6>
                            <p class="text-muted mb-0">Thứ 2 - Thứ 6: 7:00 - 17:00</p>
                        </div>
                    </div>

                    <div class="social-follow mt-4">
                        <h6 class="fw-bold mb-3">Theo dõi chúng tôi</h6>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="btn btn-outline-danger">
                                <i class="fab fa-youtube"></i>
                            </a>
                            <a href="#" class="btn btn-outline-info">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            @* Contact Form *@
            <div class="col-lg-8">
                <div class="contact-form-wrapper bg-light p-4 p-md-5 rounded-4">
                    <h4 class="fw-bold mb-4">Gửi Tin Nhắn Cho Chúng Tôi</h4>

                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Index" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Form.ParentName" class="form-label fw-bold"></label>
                                <input asp-for="Form.ParentName" class="form-control form-control-lg" placeholder="Nhập họ tên của bạn">
                                <span asp-validation-for="Form.ParentName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Form.Phone" class="form-label fw-bold"></label>
                                <input asp-for="Form.Phone" class="form-control form-control-lg" placeholder="Nhập số điện thoại">
                                <span asp-validation-for="Form.Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Form.Email" class="form-label fw-bold"></label>
                                <input asp-for="Form.Email" class="form-control form-control-lg" placeholder="Nhập email (không bắt buộc)">
                                <span asp-validation-for="Form.Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Form.ChildName" class="form-label fw-bold"></label>
                                <input asp-for="Form.ChildName" class="form-control form-control-lg" placeholder="Nhập tên bé (không bắt buộc)">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Form.ChildAge" class="form-label fw-bold"></label>
                                <select asp-for="Form.ChildAge" class="form-select form-select-lg">
                                    <option value="">Chọn tuổi của bé</option>
                                    @for (int i = 1; i <= 6; i++)
                                    {
                                        <option value="@i">@i tuổi</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Form.Message" class="form-label fw-bold"></label>
                            <textarea asp-for="Form.Message" class="form-control" rows="5" placeholder="Nhập nội dung tin nhắn..."></textarea>
                            <span asp-validation-for="Form.Message" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg text-white rounded-pill px-5">
                            <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@* Map Section *@
