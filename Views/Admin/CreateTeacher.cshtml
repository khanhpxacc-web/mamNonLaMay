@model Teacher

@{
    ViewData["Title"] = "Thêm Giáo viên";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">Thêm giáo viên mới</h5>
    <a href="/admin/teachers" class="btn btn-admin-outline">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <form asp-action="CreateTeacher" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-bold">Họ tên <span class="text-danger">*</span></label>
                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Nhập họ tên giáo viên" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Position" class="form-label fw-bold">Chức vụ <span class="text-danger">*</span></label>
                <select asp-for="Position" class="form-select">
                    <option value="Hiệu trưởng">Hiệu trưởng</option>
                    <option value="Phó Hiệu trưởng">Phó Hiệu trưởng</option>
                    <option value="Giáo viên chủ nhiệm">Giáo viên chủ nhiệm</option>
                    <option value="Giáo viên âm nhạc">Giáo viên âm nhạc</option>
                    <option value="Giáo viên mỹ thuật">Giáo viên mỹ thuật</option>
                    <option value="Giáo viên thể chất">Giáo viên thể chất</option>
                    <option value="Giáo viên tiếng Anh">Giáo viên tiếng Anh</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Qualifications" class="form-label fw-bold">Bằng cấp/Chứng chỉ</label>
                <input asp-for="Qualifications" class="form-control" placeholder="VD: Thạc sĩ Giáo dục Mầm non" />
            </div>
            
            @await Html.PartialAsync("_ImageUpload", "", new ViewDataDictionary(ViewData) { { "InputId", "AvatarUrl" }, { "InputName", "AvatarUrl" }, { "Label", "Ảnh đại diện" } })
            
            <div class="mb-4">
                <label asp-for="Bio" class="form-label fw-bold">Giới thiệu</label>
                <textarea asp-for="Bio" id="Bio" class="form-control" rows="5" placeholder="Giới thiệu về giáo viên..."></textarea>
                <div class="form-text">Có thể nhập ảnh trực tiếp vào nội dung bằng cách copy-paste hoặc dùng nút Insert Image</div>
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-admin px-4">
                    <i class="fas fa-save me-2"></i>Lưu
                </button>
                <a href="/admin/teachers" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @await Html.PartialAsync("_RichTextEditor", "", new ViewDataDictionary(ViewData) { { "TextareaId", "Bio" }, { "Height", 300 } })
}
